<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    card_view:cardCornerRadius="10dp"
    android:background="@color/bgWhite"
    card_view:cardUseCompatPadding="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground">
        <ImageView
            android:id="@+id/bannerEvent"
            android:layout_marginLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/txtEventTitle"
            android:layout_toRightOf="@+id/bannerEvent"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtEventTanggal"
            android:layout_toRightOf="@+id/bannerEvent"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEventTitle"/>
        <TextView
            android:id="@+id/txtEventDescription"
            android:layout_toRightOf="@+id/bannerEvent"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtEventTanggal"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>